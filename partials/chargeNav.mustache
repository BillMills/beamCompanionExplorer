<div class='content'>
    <h2 class='navHeader'>Available Charge States:</h2>
    <h2 class='small'>Click to generate plots & companion lists.</h2>
    <div class="btn-group" role="group">
        {{#chargeStates}}
            <button type="button" class="btn btn-default" onclick='gotoChargeState("{{A}}", "{{species}}", "{{q}}")'>
                <div class='isotope'><sup>{{A}}</sup>{{species}}<sup>{{q}}+</sup></div>
                {{#chargeFraction}}
                    <b>CF: {{.}}%</b>
                {{/chargeFraction}}
                {{#meanCurrent}}
                    <b>Current: {{.}} A</b>
                {{/meanCurrent}}
            </button>
        {{/chargeStates}}
    </div>
</div>